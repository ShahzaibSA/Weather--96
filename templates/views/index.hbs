<!DOCTYPE html>
<html lang="en">
	{{>header}}

	<body>
		{{>navbar}}
			<div class="hero" data-bg-image="images/banner.png">
				<div class="container">
					<form class="find-location">
						<input id="weather-input" type="text" placeholder="Find your location...">
						<input type="submit" value="Find">
					</form>

				</div>
			</div>
			<div class="forecast-table">
				<div class="container">
					<div class="forecast-container">
						<div class="today forecast">
							<div class="forecast-header">
								<div class="day" id="day">Day</div>
								<div class="date" id="date">Date</div>
							</div> <!-- .forecast-header -->
							<div class="forecast-content">
								<div class="location" id="location">Location</div>
								<div class="degree">
									<div class="num"><span id="temperature"> -- </span><sup>o</sup>C</div>
									<div class="forecast-icon">
										<img 
											style="border-radius: 30px; padding: 5px 5px 10px 5px; display:none;"
										 id="forecast-icon" src="images/icons/icon-1.svg" alt="" width=90>
									</div>	
								</div>
								<span ><img src="images/humidity-gif.gif" width="33px" style="width: 27px; border-radius: 5px;"  alt="">
									<span id="humidity"> __ %</span>
								</span>
								<span><img src="images/feels_like-gif.gif" style="width: 27px; border-radius: 5px;" alt="">
									<span id="feel_like">__ <sup>o</sup>C</span>
								</span>
								<span><img src="images/wind-gif.gif" style="width: 27px; border-radius: 5px;" alt="">
								 <span id="wind">__ km/h</span>
								 </span>
							</div>
						</div>
						<div class="forecast">
							<div class="forecast-header">
								<div class="day">Tuesday</div>
							</div> <!-- .forecast-header -->
							<div class="forecast-content" id="forecast-content-1" style="display: none;">
								<div class="forecast-icon">
									<img src="images/icons/icon-3.svg" alt="" width=48>
								</div>
								<div class="degree"> <span id="temp-1"></span> <sup>o</sup>C</div>
								<small><span id="min-temp-1"></span><sup>o</sup>C</small>
							</div>
						</div>
						<div class="forecast">
							<div class="forecast-header">
								<div class="day">Wednesday</div>
							</div> <!-- .forecast-header -->
							<div class="forecast-content" id="forecast-content-2" style="display: none;">
								<div class="forecast-icon">
									<img src="images/icons/icon-5.svg" alt="" width=48>
								</div>
								<div class="degree"><span id="temp-2"></span><sup>o</sup>C</div>
								<small> <span id="min-temp-2"> - </span> <sup>o</sup>C</small>
							</div>
						</div>
						<div class="forecast">
							<div class="forecast-header">
								<div class="day">Thursday</div>
							</div> <!-- .forecast-header -->
							<div class="forecast-content" id="forecast-content-3" style="display: none;">
								<div class="forecast-icon">
									<img src="images/icons/icon-7.svg" alt="" width=48>
								</div>
								<div class="degree"><span id="temp-3">230</span><sup>o</sup>C</div>
								<small> <span id="min-temp-3"> - </span> <sup>o</sup>C</small>
							</div>
						</div>
						<div class="forecast">
							<div class="forecast-header">
								<div class="day">Friday</div>
							</div> <!-- .forecast-header -->
							<div class="forecast-content" id="forecast-content-4" style="display: none;">
								<div class="forecast-icon">
									<img src="images/icons/icon-12.svg" alt="" width=48>
								</div>
								<div class="degree"><span id="temp-4">230</span><sup>o</sup>C</div>
								<small> <span id="min-temp-4"> - </span> <sup>o</sup>C</small>
							</div>
						</div>
						<div class="forecast">
							<div class="forecast-header">
								<div class="day">Saturday</div>
							</div> <!-- .forecast-header -->
							<div class="forecast-content" id="forecast-content-5" style="display: none;">
								<div class="forecast-icon">
									<img src="images/icons/icon-13.svg" alt="" width=48>
								</div>
								<div class="degree"><span id="temp-5">230</span><sup>o</sup>C</div>
								<small> <span id="min-temp-5"> - </span> <sup>o</sup>C</small>
							</div>
						</div>
						<div class="forecast">
							<div class="forecast-header">
								<div class="day">Sunday</div>
							</div> <!-- .forecast-header -->
							<div class="forecast-content" id="forecast-content-6" style="display: none;">
								<div class="forecast-icon">
									<img src="images/icons/icon-14.svg" alt="" width=48>
								</div>
								<div class="degree"><span id="temp-6">230</span><sup>o</sup>C</div>
								<small> <span id="min-temp-6"> - </span> <sup>o</sup>C</small>
							</div>
						</div>
					</div>
				</div>
			</div> <!-- .main-content -->

			<footer class="site-footer">
				<div class="container">
					<div class="row">
						<div class="col-md-8">
							<form action="#" class="subscribe-form">
								<input type="text" placeholder="Enter your email to subscribe...">
								<input type="submit" value="Subscribe">
							</form>
						</div>
						<div class="col-md-3 col-md-offset-1">
							<div class="social-links">
								<a href="#"><i class="fa fa-facebook"></i></a>
								<a href="#"><i class="fa fa-twitter"></i></a>
								<a href="#"><i class="fa fa-google-plus"></i></a>
								<a href="#"><i class="fa fa-pinterest"></i></a>
							</div>
						</div>
					</div>

					<p class="colophon">Copyright 2014 Company name. Designed by Themezy. All rights reserved</p>
				</div>
			</footer> <!-- .site-footer -->
		</div>
		
		<script src="/js/jquery-1.11.1.min.js"></script>
		<script src="/js/plugins.js"></script>
		<script src="/js/weather.js"></script>
		<script src="/js/app.js"></script>
		
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>

	</body>

</html>